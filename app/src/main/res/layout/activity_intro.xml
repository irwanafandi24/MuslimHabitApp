<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.illiyinmagang.miafandi.muslimhabitapp.introslider.IntroActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_myslider"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

    <View
        android:id="@+id/line_slider"
        android:layout_above="@+id/mymagic"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        />

    <LinearLayout
        android:id="@+id/mymagic"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp"
        >
        <TextView
            android:textSize="8pt"
            android:id="@+id/txt_skip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SKIP"
            android:textColor="@color/white"
            android:layout_weight="0.4"
            android:textStyle="bold"
            />

        <LinearLayout
            android:id="@+id/layout_titik"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

        </LinearLayout>

        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="8pt"
            android:id="@+id/txt_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:layout_weight="0.4"
            android:textAlignment="textEnd"
            android:gravity="end" />

    </LinearLayout>

</RelativeLayout>
