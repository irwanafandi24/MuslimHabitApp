<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilihan Waktu Notifikasi"
        android:textSize="12pt"
        android:gravity="center"
        />
    <View
        style="@style/lineView"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        >
    </View>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >

        <RadioButton
            android:id="@+id/rd_3m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 Menit"
            />

        <RadioButton
            android:id="@+id/rd_5m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Menit"
            />

        <RadioButton
            android:id="@+id/rd_10m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 Menit"
            />

        <RadioButton
            android:id="@+id/rd_15m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 Menit"
            />

        <RadioButton
            android:id="@+id/rd_30m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 Menit"
            />
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BATAL"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/btn_ubah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIMPAN PILIHAN"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>



</LinearLayout>