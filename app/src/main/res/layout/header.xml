<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/colorPrimary"
    android:padding="20dp"
    android:layout_marginTop="25dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <!--<de.hdodenhof.circleimageview.CircleImageView-->
            <!--android:id="@+id/imageMakanananItem"-->
            <!--android:layout_width="80dp"-->
            <!--android:layout_height="80dp"-->
            <!--android:scaleType="centerCrop"-->
            <!--app:civ_border_color="@color/darkgrey"-->
            <!--app:civ_border_width="3dp"-->
            <!--app:srcCompat="@drawable/profilefoto"-->
            <!--android:layout_marginRight="15dp"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--/>-->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profilefoto"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/txtNama"
                android:text="Deen Salam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginBottom="1dp"/>
            <TextView
                android:id="@+id/txtAsal"
                android:text="Malang, Indonesia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>